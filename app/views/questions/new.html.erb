<div class="question-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @question do |f| %>
        <div class="form-group">
          <div class="category">
            <%= f.label :category %>
          </div>
            <%= f.collection_select :category_id, Category.all, :id, :category %>
        </div>
        <div class="form-group">
          <%= f.text_area :question,:size=>"60x20", class: "form-control"  %>
        </div>
          
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>