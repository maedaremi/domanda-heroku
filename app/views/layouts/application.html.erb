<!DOCTYPE html>
<html>
  <head>
    <title>Domanda</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
     
      <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
       <div class="container">
          <nav class="nav navbar-nav">
            <span class="navbar-brand mb-0 h1">domanda</span>
          </nav>
           <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
            <li>
              <%= link_to questions_path do %>
                <%= image_tag "icons/home.png" %>
              <% end %>
            </li>
            <li>
              <%= link_to user_path(current_user) do %>
              <%= image_tag "icons/my.png" %>
              <% end %>
            </li>
            <li>
              <%= link_to new_question_path do %>
                <%= image_tag "icons/question.png" %>
                <% end %>
            </li>
            <li>
              <%= link_to logout_path, method: :delete do %>
                <%= image_tag "icons/logout.png" %>
              <% end %>
            </li>
            <% end %>
           </ul>
       </div>
     </nav>
    <%= yield %>
    
    <script>
     $(function(){
      $(".alert").fadeOut(5000);
     });
    </script>
  </body>
</html>